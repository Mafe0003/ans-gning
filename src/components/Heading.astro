---
// Henter parametrene fra Astro.props
const { htmlheading="h2", size="medium", font="sans", stylingclasses=""} = Astro.props; 
const Htmlheading = htmlheading;
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"xlarge": "text-[64px] lg:text-[200px] text-[var(--accent-color)]",  // = h1 (Margherita)
"medium": "text-[40px] lg:text-[100px] text-[var(--accent-color)]", // = h2 (skills)
"small": "text-[36px] lg:text-[80px] text-[var(--color-secondary)]", // = h3 (multimediedesigner)
"small_blue": "text-[36px] lg:text-[80px] text-[var(--accent-color)]", // = h3 (details)
"small_light": "text-[36px] lg:text-[80px] text-[var(--color-seclight)]", // = knapper/links
"small_dark": "text-[36px] lg:text-[80px] text-[var(--color-secondary)]", // = knapper/links
"xsmall": "text-[20px] lg:text-[40px] text-[var(--color-secondary)]",  // = text
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
"h1": "font-display",
"h2": "font-display",
"h3": "font-paragraph",
"h3_blue": "font-paragraph",
"knapper": "font-buttons",
"tekst": "font-paragraph",
};
---
<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font]]}><slot /></Htmlheading>